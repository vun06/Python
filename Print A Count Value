24	# Code Started Here:
25	def main():
26	    print("Starting While Loop - Print Count Variable")
27	    # Enter Your Code Here:
28	    count = 0
29	    while count < 10:
30	        print (count)
31	        count += 1
32	    print("Ending While Loop")
33	
