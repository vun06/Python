def greet(lang):
    if lang == 'es':
        return'Hola'

    elif lang == 'fr':
        return'Bonjour'
    elif lang == 'Swahili':
        return 'Habari'
    elif lang == 'Ukrainian':
        return 'Привіт'
    elif lang == 'Elven':
        return 'Mae govannen'
    elif lang == 'Klingon':
        return 'nuqneH'
    else:
        return'Hello'

def main():
    while True:
        name = input('What is your name? \n>')
        lang = input('Pick one of the language you familiar with? \nPlease only type first two letter of that language \nex: espanol = es \n>')
        print(greet(lang), name)
        t = input('Do you have any other friends that would like to say hi too \nIf no please type "break" \n>').strip().lower()
        if t == 'break':
            break
        else:
            continue
    
main()

print('''
